extends ../layout

block body
  nav.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
    div.container
      div.navbar-header
        //For mobile icon-bar display
        button.navbar-toggle.collapsed(type="button", data-toggle="collapse",data-target="#navbar",aria-expanded="false",aria-controls="navbar")
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href="/") Store
      //Display navbar and handle mobile layout
      div#navbar.navbar-collapse.collapse
        - if (req.session.user)
          ul.nav.navbar-nav.pull-right
            li#user-dropdown.dropdown
              a.dropdown-toggle(href="#", data-toggle="dropdown")
                | Logged in as&nbsp;
                - if (req.session.user.firstName || req.session.user.lastName)
                  span #{req.session.user.firstName} #{req.session.user.lastName}
                - else
                  span #{req.session.user.username}
        - else
          form.navbar-form.navbar-right(role="form")
            div.form-group
              input.form-control(type="text",placeholder="Username")
            div.form-group
              input.form-control(type="password",placeholder="Password")
            button.btn.btn-success(type="submit") Sign in
  div(ui-view)